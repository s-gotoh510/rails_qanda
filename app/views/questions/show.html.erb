<div class="row show">
  <div class="col-md-12">
    <h2><%= @question.title %></h2>
    <div>
      質問内容: <%= simple_format(@question.content) %>
    </div>
    <div>
      質問者: <%= @question.name %>
    </div>
    <hr>
    
    <div>
      <h3>回答一覧</h3>
      <table class="table table-striped">
        <% if @question.answers.any? %>
          <thead class="thead-light">
            <tr>
              <td>回答内容</td>
              <td>回答者</td>
              <td>メニュー</td>
            </tr>
          </thead>
          <tbody>
            <% @question.answers.each do |answer| %>
              <tr>
                <td><%= answer.content %></td>
                <td><%= answer.name %></td>
                <td>
                  [<%= link_to '編集', edit_question_answer_path(@question, answer) %>]
                  [<%= link_to '削除', question_answer_path(@question, answer), method: :delete, data: { confirm: 'Are you sure?' } %>]
                </td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <p>まだ回答はありません</p>
        <% end %>
      </table>
    </div>
    
    <h3>質問へ回答する</h3>
    <%= form_with model: [@question, @answer], local: true do |f| %>
      <%= f.hidden_field :question_id, { value: @question.id } %>
      <div class="form-group">
        <label>回答者のお名前</label>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>回答内容</label>
        <%= f.text_area :content, rows: "10", cols: "30", class: 'form-control' %>
      </div>
      <div class="text-center">
        <%= f.submit '回答を送信', class: 'btn btn-primary' %>
      </div>
    <% end %>
    
    <div class="link-top">
      <%= link_to '> ホーム', root_path %>
    </div>
  </div>
</div>